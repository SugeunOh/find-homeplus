{
	"manifest_version": 2,

	"name": "find-homeplus gift card",
	"version": "0.1",
	"description": "홈플러스 디지털 상품권 최소가격을 확인함.",

	"icons": {
		"16": "logo.png",
		"48": "logo.png",
		"128": "logo.png"
	},

	"permissions": [
		"background",
		"notifications",
		"alarms",
		"tabs",
		"http://*/*",
		"https://*/*"
	],

	"background": {
    		"scripts" : ["background.js"]
	},

	"browser_action" : {
		"default_icon" : "logo.png"
	}
}
